# Gemini API Configuration
gemini:
  api_key: ""  # Set via GEMINI_API_KEY environment variable
  model: "gemini-2.5-flash-lite"
  api_base: "https://generativelanguage.googleapis.com/v1beta"
  temperature: 0.2
  max_tokens: 8192
  timeout: 120

# CoinGecko API Configuration
coingecko:
  demo_api_key: ""  # Set via COINGECKO_DEMO_API_KEY environment variable
  pro_api_key: ""   # Set via COINGECKO_API_KEY environment variable
  environment: "demo"
  timeout: 30

# Yahoo Finance Configuration
yahoo_finance:
  timeout: 30
  retry_attempts: 3
  retry_delay: 1.0

# DuckDuckGo Search Configuration
ddg:
  max_results: 3
  region: "us-en"
  safesearch: "moderate"
  timeout: 30

# Analysis Parameters
analysis:
  default_days: 30
  default_threshold: 2.0
  default_forecast_days: 5
  max_analysis_steps: 10
  min_data_points: 5
  volatility_window: 10
  ma5_window: 5
  ma10_window: 10

# Logging Configuration
logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file_path: null
  max_file_size: 10485760
  backup_count: 5

# Feature Flags
feature_flags:
  enable_web_search: true
  enable_crypto_analysis: true
  enable_stock_analysis: true
  enable_forecasting: true
  enable_technical_indicators: true
  enable_animations: true
  enable_caching: true
  enable_retry_logic: true
  enable_error_handling: true
  enable_validation: true

# User Interface Configuration
ui:
  page_title: "Agentic-Ticker (Gemini)"
  page_icon: "ðŸ“ˆ"
  layout: "wide"
  chart_height: 500
  animation_duration: 500
  transition_duration: 300

# CORS Configuration for FastAPI Backend
cors:
  allowed_origins:
    - "http://localhost:8501"  # Default Streamlit local port
    - "http://127.0.0.1:8501"  # Alternative localhost
  allowed_methods:
    - "GET"
    - "POST" 
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "Content-Type"
    - "Authorization"
    - "X-Requested-With"
  allow_credentials: true
  max_age: 600  # 10 minutes

# Configuration Settings
config_file_path: null
hot_reload_enabled: false
hot_reload_interval: 60

# Security Settings
security:
  enable_encryption: false
  encryption_key_env: "AGENTIC_TICKER_ENCRYPTION_KEY"
  audit_log_enabled: true
  audit_log_path: "logs/config_audit.log"
  secret_rotation_days: 90
  config_backup_enabled: true
  config_backup_count: 5